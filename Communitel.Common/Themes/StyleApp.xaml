<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Communitel.Common.Themes">

    <SolidColorBrush x:Key="BackGroundGridTop" Color="#FF18C6F9"/>
    <SolidColorBrush x:Key="BackGroundGridMenu" Color="#FF37474F"/>
    <SolidColorBrush x:Key="HeaderBackGroundPage" Color="#FF18C6F9"/>
    <SolidColorBrush x:Key="ForeGroundFontAwesome" Color="#FF37474F"/>
    <SolidColorBrush x:Key="ForeGroundFontAwesomeTrash" Color="Red"/>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="Margin" Value="10,0,10,10"/>
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="DesignBorder" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="AliceBlue"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

</ResourceDictionary>