<UserControl x:Class="Communitel.CustomControls.TextField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Communitel.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="TextF">
    <StackPanel>
        <TextBlock x:Name="txbLabel" HorizontalAlignment="Stretch" Text="LABEL" Margin="5,5,5,5" />

        <TextBox x:Name="txtText" Text="{Binding ElementName=TextF, Path=Text}" PreviewTextInput="ValidationTextBox" HorizontalAlignment="Stretch" Height="30" BorderBrush="Gray" Margin="5,5,5,5" BorderThickness="0, 0, 0, 2" Background="Transparent" />
        
    </StackPanel>
</UserControl>
